# Example environment variables for microservicio_notificaciones
# Copy to .env and edit values for your environment

# Flask
FLASK_ENV=development
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5003

# SMTP (MailHog default credentials)
NOTIFICATIONS_SMTP_HOST=mailhog
NOTIFICATIONS_SMTP_PORT=1025
NOTIFICATIONS_SMTP_USER=
NOTIFICATIONS_SMTP_PASS=
NOTIFICATIONS_FROM=from@example.com

# Celery (optional) - use Redis broker provided in docker-compose
CELERY_BROKER_URL=redis://redis:6379/0

# Storage dir (relative to package)
NOTIFICATIONS_STORAGE_DIR=notifications
APP_NAME=MicroservicioNotificaciones
APP_ENV=local
APP_KEY=base64:GENERATE_YOUR_OWN
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack

DB_CONNECTION=sqlite
# For sqlite use database/database.sqlite and ensure file exists

QUEUE_CONNECTION=database

MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
